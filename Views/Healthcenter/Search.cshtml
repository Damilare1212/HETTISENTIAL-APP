

@model IEnumerable< HettisentialMvc.HealthCenter >

     @{
        ViewData["Title"] = "All Regisered HealthCenter";
       var val =  ViewData["MySearch"];
       int Sno = 0;
      var data =    Model;
      var store =  data.Contains(val);
    


       
      

    }


     
    <form method=" get" asp-action="Search"asp-controller="Healthcenter" >
        

      

        
       <input autocomplete="off" spellcheck="false" role="combobox" aria-live="polite" type="search" 
        
        
         class="feather feather-search" aria-hidden="true" 
         
       placeholder="Enter KeyWord..... "    
       value="@val"  name="text" style="width: ;7000px  ">
       
 
       <input type="submit" value="Search" class="btn btn-primary">
       <a     asp-action="Search" > All Regitered Healthcenter  </a>
 
                      

         
         
<div style="margin-top: 10px;" >
              <div class="text-center"></div>
                  <strong>Search for Hospital</strong>
                  <div>
                     <a  asp-controller= "Hospital"  asp-action="Search">Search for Hospital </a>
                  </div>







 <strong>Search for Pharmarcy</strong>
                  <div>
                     <a  asp-controller= "Pharmarcy"  asp-action="Search"> Search for Pharmarcy </a>
                  </div>






                   <strong>Search for  Medical Lab  </strong>
                  <div>
                     <a  asp-controller= "MedicalLab"  asp-action="Search"> Search for  Medical Lab </a>
                  </div>

                  

                    </div>







    <div class="row">
    <div class="col-md-4">
          
        <table class="table table-bordered">
            <th>

            <thead>
                <tr>

     


                <th>S/N</th>
        

                     <th>  @Html.DisplayNameFor(model => model.HealthCenterName)</th>
                    <th>  @Html.DisplayNameFor(model => model.Category)</th>
                    <th>  @Html.DisplayNameFor(model => model.Email)</th>
                      <th>  @Html.DisplayNameFor(model => model.PhoneNumber)</th>
                        <th>  @Html.DisplayNameFor(model => model.HoursOfWork)</th>
                           <th>  @Html.DisplayNameFor(model => model.StreetAddress)</th>
                          <th>  @Html.DisplayNameFor(model => model.Image)</th>

               @if (  TempData["Message"] != null &&  val != null &&  !store  )
           {
                    <div  style="text-align: center" class=""> 

                        <strong>@TempData["Message"] </strong>
                        @* <button type="button" class="btn-close" data-bs-dismiss="alert"></button> *@
                    </div>
                 
           }
             

        

                </tr>
            </thead>
            <tbody>


          


                @foreach (var healthCenter in Model)
                {
                  Sno = Sno+=1;

                    <tr>
                      <td>@Sno</td>
                    <td>@healthCenter.HealthCenterName</td>
                    <td>@healthCenter.Category</td>
                     <td>@healthCenter.Email</td>
                     <td>@healthCenter.PhoneNumber</td>
                      <td>@healthCenter.HoursOfWork</td>
                        <td>@healthCenter.StreetAddress</td>
                       <td>
                             <img   class="card-img" asp-append-version="true" alt="Healthcenter Image" style="width: 350px; height: 350px;" src="~/images/@healthCenter.Image">
                        </td>
                    </tr>
                }
            </tbody>
        </table>
                </form>
    </div>
    
</div>

 