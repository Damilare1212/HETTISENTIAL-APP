
@model   IEnumerable< HettisentialMvc.MedicalLabDTo>


    <main id="main" class="main">

    <div class="pagetitle">
        @* <h1>Profile</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                <li class="breadcrumb-item">Users</li>
                <li class="breadcrumb-item active">Profile</li>
            </ol>
        </nav> *@
    </div><!-- End Page Title -->

    <section class="section profile">



        <div class="card-header" style="background-color: #65c9cd;">
            <div class="card-title">
                <h1 class="text-center">All Maedical Labs</h1>
            </div>
        </div>

        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Id)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.LabName)
                    </th>

                    @* <th>
                        @Html.DisplayNameFor(model => model.HoursOfWork)
                    </th> *@
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.PhoneNumber)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.LabImage)
                    </th>



                    <th>
                        Update
                    </th>
                    <th>
                        Details
                    </th>
                    <th>
                        Delete
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var admin in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => admin.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => admin.LabName)
                        </td>
                        @* <td>
                            @Html.DisplayFor(modelItem => admin.HoursOfWork)
                        </td> *@
                        <td>
                            @Html.DisplayFor(modelItem => admin.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => admin.PhoneNumber)
                        </td>
                        <td>
                            <img class="card-img" asp-append-version="true" alt="Lab Image" style="width: 300px; height: 300px;" src="~/images/@admin.LabImage">
                        </td>
                        <td>
                            <a asp-action="Update" asp-route-id="@admin.Id">Update</a>
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@admin.Id">Details</a>
                        </td>
                        <td>
                            <a asp-action="Delete" asp-route-id="@admin.Id">Delete</a>
                        </td>
                         @* <td>
                            <a asp-action="Profile" asp-route-id="@admin.Id">Profile</a>
                        </td> *@
                    </tr>
                }
            </tbody>
        </table>
    </section>
</main>