

@model HettisentialMvc.RoleDto

 











  <!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Elegant Dashboard | Sign Up</title>
  <!-- Favicon -->
  <link rel="shortcut icon" href="~/img/svg/logo.svg" type="image/x-icon">
  <!-- Custom styles -->
  <link rel="stylesheet" href="~/css/style.min.css">
</head>

<body>
  <div class="layer"></div>
<main class="page-center">
  <article class="sign-up">
    <h1 class="sign-up__title">Get started</h1>
    <p class="sign-up__subtitle">Fil in Values To Create Role</p>
    <form class="sign-up-form form" asp-action="Create" asp-controller="Role" method="post">
      <label class="form-label-wrapper">

        <p class="form-label">RoleName</p>
        <input class="form-input" asp-for="RoleName" name="RoleName" type="text" placeholder="Enter The RoleName" required>
      </label>
      <label class="form-label-wrapper">
        <p class="form-label">Description</p>
        <input class="form-input" type="date" name="Description" asp-for="Description" placeholder="Enter The  Description " required>
      </label>
    
      <label class="form-checkbox-wrapper">
        <input class="form-checkbox" type="checkbox" required>
        <span class="form-checkbox-label">Remember me next time</span>
      </label>
      <button class="form-btn primary-default-btn transparent-btn">Create Role</button>
    </form>
  </article>
</main>
<!-- Chart library -->
<script src="~/plugins/chart.min.js"></script>
<!-- Icons library -->
<script src="~/plugins/feather.min.js"></script>
<!-- Custom scripts -->
<script src="~/js/script.js"></script>
</body>

</html>