<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Elegant Dashboard | Sign Up</title>
  <!-- Favicon -->
  <link rel="shortcut icon" href="~/img/svg/logo.svg" type="image/x-icon">
  <!-- Custom styles -->
  <link rel="stylesheet" href="~/css/style.min.css">
</head>

<body>
  <div class="layer"></div>
<main class="page-center">
  <article class="sign-up">
    <h1 class="sign-up__title">Get started</h1>
    <p class="sign-up__subtitle">Fil In Form To Update Hospital</p>
    <form class="sign-up-form form" asp-action="Update" method="post" asp-controller="Hospital">
      <label class="form-label-wrapper">
        <p class="form-label">HospitalName</p>
        <input class="form-input" asp-for ="HealthCenterName", name="HealthCenterName" type="text" placeholder="Enter HospitalName" required>
      </label>
      <label class="form-label-wrapper">
        <p class="form-label">HealthcenterAddress</p>
        <input class="form-input"  asp-for ="HealthcenterAddress", name="HealthcenterAddress" type=" text" placeholder="Enter Hospital Adderess" required>
      </label>
      <label class="form-label-wrapper">
        <p class="form-label">HealthCenterPhoneNumber</p>
        <input class="form-input"  asp-for ="HealthCenterPhoneNumber", name="HealthCenterPhoneNumber" type="number" placeholder="Enter Hospital PhoneNumber " required>
      </label>
      <label class="form-label-wrapper">
        <p class="form-label">HealthCenterEmail</p>
        <input class="form-input"  asp-for ="HealthCenterPhoneNumber", name="HealthCenterPhoneNumber" type="email" placeholder="Enter Hospital Email" required>
      </label>
      <label class="form-label-wrapper">
        <p class="form-label">HealthCenterImage</p>
        <input class="form-input"  asp-for ="HealthCenterImage", name="HealthCenterImage" type="file" placeholder="Upload Hospital Image" required>
      </label>
       <label class="form-label-wrapper">
        <p class="form-label">HealthCenterCategory</p>
        <select asp-for="HealthCenterCategory"   asp-for ="HealthCenterImage", name="HealthCenterImage" asp-items="@Html.GetEnumSelectList(typeof(HospitalCategory))" required></select>
        <label class="form-label-wrapper">
            
        <p class="form-label">HoursOfWork</p>
        <input class="form-input" type="text" asp-for ="HoursOfWork", name="HoursOfWork"   placeholder="Input yOUR hOURS oF wORK" required>
      </label>
      </label>
      <label class="form-checkbox-wrapper">
        <input class="form-checkbox" type="checkbox" required>
        <span class="form-checkbox-label">Remember me next time</span>
      </label>
      <button class="form-btn primary-default-btn transparent-btn">Update</button>
    </form>
  </article>
</main>
<!-- Chart library -->
<script src="~//plugins/chart.min.js"></script>
<!-- Icons library -->
<script src="~/plugins/feather.min.js"></script>
<!-- Custom scripts -->
<script src="~/js/script.js"></script>
</body>

</html>